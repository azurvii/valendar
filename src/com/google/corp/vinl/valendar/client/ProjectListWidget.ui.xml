<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		
	</ui:style>
	<g:HTMLPanel>
		<g:DockLayoutPanel unit="EM" width="100%" height="100%">
			<g:west size="0.5">
				<g:HTMLPanel />
			</g:west>
			<g:west size="11.0">
				<g:DecoratorPanel>
					<g:VerticalPanel>
						<g:Label text="Projects" />
						<g:Cell horizontalAlignment="ALIGN_CENTER">
							<g:ListBox visibleItemCount="10" ui:field="projectList"
								width="10em" />
						</g:Cell>
						<g:Cell horizontalAlignment="ALIGN_CENTER">
							<g:HorizontalPanel>
								<g:Button width="2.5em" ui:field="addButton">+</g:Button>
								<g:Button width="2.5em" ui:field="deleteButton">-</g:Button>
								<g:Button ui:field="refreshButton">Refresh</g:Button>
							</g:HorizontalPanel>
						</g:Cell>
					</g:VerticalPanel>
				</g:DecoratorPanel>
			</g:west>
			<g:west size="0.5">
				<g:HTMLPanel />
			</g:west>
			<g:center>
				<g:VerticalPanel>
					<g:CaptionPanel captionText="Info">
						<g:VerticalPanel>
							<g:Cell>
								<g:HorizontalPanel>
									<g:Cell verticalAlignment="ALIGN_MIDDLE">
										<g:Label text="Name" width="4em" />
									</g:Cell>
									<g:Cell>
										<g:TextBox visibleLength="10" ui:field="nameText"
											width="16em" />
									</g:Cell>
								</g:HorizontalPanel>
							</g:Cell>
							<g:Label text="Description" />
							<g:TextArea ui:field="descriptionText" width="20em"
								height="15em" />
							<g:HorizontalPanel>
								<g:Label text="Created on: " />
								<g:HTML wordWrap="true">&nbsp; </g:HTML>
								<g:Label ui:field="creationDateLabel" />
							</g:HorizontalPanel>
							<g:HorizontalPanel>
								<g:Label text="Events: " />
								<g:HTML wordWrap="true">&nbsp; </g:HTML>
								<g:Label ui:field="eventCountLabel" />
							</g:HorizontalPanel>
							<g:HorizontalPanel>
								<g:Label text="Publications: " />
								<g:HTML wordWrap="true">&nbsp; </g:HTML>
								<g:Label ui:field="publicationCountLabel" />
							</g:HorizontalPanel>
							<g:HorizontalPanel>
								<g:Button ui:field="saveButton">Save</g:Button>
								<g:Button ui:field="editButton">Edit</g:Button>
								<g:Button ui:field="publishButton">Publish</g:Button>
							</g:HorizontalPanel>
						</g:VerticalPanel>
					</g:CaptionPanel>
					<g:Label ui:field="messageLabel" />
				</g:VerticalPanel>
			</g:center>
		</g:DockLayoutPanel>
	</g:HTMLPanel>
</ui:UiBinder> 