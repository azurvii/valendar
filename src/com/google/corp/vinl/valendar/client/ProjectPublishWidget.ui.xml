<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		
	</ui:style>
	<g:HTMLPanel>
		<g:DockLayoutPanel unit="EM" width="100%" height="100%">
			<g:west size="0.5">
				<g:HTMLPanel />
			</g:west>
			<g:west size="11.0">
				<g:VerticalPanel>
					<g:Cell horizontalAlignment="ALIGN_CENTER">
						<g:Button ui:field="backButton">Back to project list</g:Button>
					</g:Cell>
					<g:DecoratorPanel>
						<g:VerticalPanel>
							<g:Cell horizontalAlignment="ALIGN_CENTER">
								<g:Label text="Publications" />
							</g:Cell>
							<g:Cell horizontalAlignment="ALIGN_CENTER">
								<g:ListBox visibleItemCount="10" ui:field="publicationList"
									width="10em" />
							</g:Cell>
							<g:Cell horizontalAlignment="ALIGN_CENTER">
								<g:HorizontalPanel>
									<g:Button ui:field="addButton" width="2.5em">+</g:Button>
									<g:Button ui:field="refreshButton">Refresh</g:Button>
								</g:HorizontalPanel>
							</g:Cell>
							<g:HTML wordWrap="true" height="0.5em" />
							<g:Cell horizontalAlignment="ALIGN_CENTER">
								<g:HorizontalPanel>
									<g:Button ui:field="editButton">Edit project</g:Button>
								</g:HorizontalPanel>
							</g:Cell>
						</g:VerticalPanel>
					</g:DecoratorPanel>
					<g:Label ui:field="messageLabel" />
				</g:VerticalPanel>
			</g:west>
			<g:west size="0.5">
				<g:HTMLPanel />
			</g:west>
			<g:center>
				<g:VerticalPanel>
					<!-- <g:DisclosurePanel animationEnabled="true"> -->
					<!-- <g:header>New event</g:header> -->
					<!-- <g:VerticalPanel> -->
					<!-- <g:HorizontalPanel> -->
					<!-- <g:Cell verticalAlignment="ALIGN_MIDDLE"> -->
					<!-- <g:TextBox ui:field="newProjectText" /> -->
					<!-- </g:Cell> -->
					<!-- <g:Cell verticalAlignment="ALIGN_MIDDLE"> -->
					<!-- <g:Button ui:field="createButton">Create</g:Button> -->
					<!-- </g:Cell> -->
					<!-- </g:HorizontalPanel> -->
					<!-- <g:HTML> -->
					<!-- Try refresh the list after creation. -->
					<!-- <br /> -->
					<!-- Datastore needs some time to process your request. -->
					<!-- </g:HTML> -->
					<!-- </g:VerticalPanel> -->
					<!-- </g:DisclosurePanel> -->
					<g:DecoratedStackPanel>
						<g:DecoratorPanel width="100%" height="100%"
							g:StackPanel-text="New publication">
							<g:Grid>
								<g:row>
									<g:customCell>
										<g:Label text="Calendar name" />
									</g:customCell>
									<g:customCell>
										<g:TextBox width="20em" />
									</g:customCell>
								</g:row>
								<g:row>
									<g:customCell>
										<g:Label text="Attendees" />
									</g:customCell>
									<g:customCell>
										<g:TextArea width="20em" height="10em" ui:field="attendeesText" />
									</g:customCell>
								</g:row>
								<g:row>
									<g:customCell>
										<g:Button ui:field="publishButton">Publish</g:Button>
									</g:customCell>
								</g:row>
							</g:Grid>
						</g:DecoratorPanel>
						<g:DecoratorPanel width="100%" height="100%"
							g:StackPanel-text="Publication information">
							<g:Grid>
								<g:row>
									<g:customCell>
										<g:Label text="Time" />
									</g:customCell>
									<g:customCell>
										<g:Label width="20em" ui:field="publicationTimeLabel" />
									</g:customCell>
								</g:row>
								<g:row>
									<g:customCell>
										<g:Label text="Calendar" />
									</g:customCell>
									<g:customCell>
										<g:Label ui:field="calendarNameLabel" />
									</g:customCell>
								</g:row>
								<g:row>
									<g:customCell>
										<g:Label text="Attendees" />
									</g:customCell>
									<g:customCell>
										<g:ListBox ui:field="attendeesLabel" width="20em"
											visibleItemCount="10" />
									</g:customCell>
								</g:row>
							</g:Grid>
						</g:DecoratorPanel>
					</g:DecoratedStackPanel>
					<g:DisclosurePanel animationEnabled="true">
						<g:header>Project info</g:header>
						<g:VerticalPanel>
							<g:Cell>
								<g:HorizontalPanel>
									<g:Cell verticalAlignment="ALIGN_MIDDLE">
										<g:Label text="Name:" width="4em" />
									</g:Cell>
									<g:Cell>
										<g:Label ui:field="projectNameLabel" width="16em" />
									</g:Cell>
								</g:HorizontalPanel>
							</g:Cell>
							<g:Label text="Description:" />
							<g:Label ui:field="projectDescriptionLabel" width="20em"
								height="8em" />
							<g:HorizontalPanel>
								<g:Label text="Created on: " />
								<g:HTML wordWrap="true">&nbsp; </g:HTML>
								<g:Label ui:field="projectCreationDateLabel" />
							</g:HorizontalPanel>
							<g:HorizontalPanel>
								<g:Label text="Events: " />
								<g:HTML wordWrap="true">&nbsp;</g:HTML>
								<g:Label ui:field="projectEventCountLabel" />
							</g:HorizontalPanel>
							<!-- <g:HorizontalPanel> -->
							<!-- <g:Label text="Events: " /> -->
							<!-- <g:HTML wordWrap="true">&nbsp; </g:HTML> -->
							<!-- </g:HorizontalPanel> -->
						</g:VerticalPanel>
					</g:DisclosurePanel>
				</g:VerticalPanel>
			</g:center>
		</g:DockLayoutPanel>
	</g:HTMLPanel>
</ui:UiBinder> 